<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />

    <link rel="stylesheet" href="css/style.css" />
    <script src="/js/sign_in.js"></script>
    <title>Document</title>
  </head>
  <body>
    <section class="bg-success text-light">
      <h1>lgo</h1>
      <!-- logo -->
    </section>

    <section id="lean" class="p-5">
      <div class="container">
        <div class="row align-items-center justify-content-betweeen">
          <div class="col-md-6">
            <img src="/images/undraw.svg" class="img-fluid" alt="" class="p-150" />
          </div>
          <div class="col-md-2"></div>
          <div class="col-md-4">
            <form class="" method="post" action="/login">
              <div class="form-floating mb-3">
                <input
                  type="email"
                  name="email"
                  class="form-control rounded-4"
                  id="floatingInput"
                  placeholder="name@example.com"
                />
                <label for="floatingInput">Email address</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  name="password"
                  class="form-control rounded-4"
                  id="floatingPassword"
                  placeholder="Password"
                />
                <label for="floatingPassword">Password</label>
              </div>
              <button
                class="w-100 mb-2 btn btn-lg rounded-4 btn-primary"
                type="submit"
                id="sign_in"
              >
                Sign in
              </button>
              <small class="text-muted"
                >By clicking Sign up, you agree to the terms of use.</small
              >
              <hr class="my-4" />

              <button class="w-100 py-2 mb-2 btn btn-success" type="submit">
                <svg class="bi me-1" width="16" height="16">
                  <use xlink:href="#github"></use>
                </svg>
                <a href="" class="bi bi-google text-l mx-1 btn-success"></a>Sign
                up with Google
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <footer class="text-center text-light bg-dark position-relative p-5">
      <div class="container">
        <p class="lead">copyright &copy; hackerton</p>
        <a href="#" class="position-absolute bottom-0 end-0 p-5">
          <i class="bi bi-arrow-up-circle h1 text-light"></i>
        </a>
      </div>
    </footer>

    <script src="/js/bootstrap.bundle.js"></script>
  </body>
</html>
